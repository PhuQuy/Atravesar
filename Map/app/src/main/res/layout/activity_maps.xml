<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"

    tools:openDrawer="start">

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:map="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="150dp"
            tools:context="com.example.npquy.activity.MapsActivity" />
        <ImageView
        android:id="@+id/pick_up_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="100dp"
        android:src="@drawable/custom_maker"
        android:layout_gravity="center"/>
        <ImageView
            android:id="@+id/home_address_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:src="@drawable/ic_home_address"
            android:padding="10dp"
            android:layout_marginTop="100dp"
            android:paddingRight="10dp"
            android:layout_marginRight="5dp"/>
        <TextView
            android:id="@+id/num_txt"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:textAlignment="center"
            android:paddingBottom="15dp"
            android:gravity="center"
            android:text="2 mins"
            android:layout_marginBottom="100dp"
            android:layout_gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="16dp"
            android:textStyle="bold" />
        <ProgressBar
            android:id="@+id/search_location_progress"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginBottom="108dp"
            />

        <RelativeLayout
            android:id="@+id/content_data"
            android:layout_width="wrap_content"
            android:layout_gravity="bottom"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/common_google_signin_btn_text_dark_default"
            android:descendantFocusability="beforeDescendants"

            android:focusableInTouchMode="true"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/text_view"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:descendantFocusability="beforeDescendants"
                    android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/pick_up_layout"
                        android:background="@drawable/bottom_line"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <EditText
                            android:id="@+id/pick_up"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:clickable="true"
                            android:hint="Pick Up"
                            android:background="@android:drawable/screen_background_light_transparent"
                            android:imeActionId="@+id/pick_up_maps"
                            android:imeActionLabel="Pick Up"
                            android:textSize="12dp"
                            android:paddingLeft="5dp"
                            android:textAlignment="center"
                            android:imeOptions="actionUnspecified"
                            android:maxLines="1"
                            android:singleLine="true" />


                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/drop_off_layout"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_below="@+id/pick_up_layout">

                        <EditText
                            android:id="@+id/drop_off"
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:clickable="true"
                            android:hint="Drop off"
                            android:textSize="12dp"
                            android:background="@android:drawable/screen_background_light_transparent"
                            android:imeActionId="@+id/drop_off"
                            android:imeActionLabel="Drop off"
                            android:textAlignment="center"
                            android:paddingLeft="5dp"
                            android:imeOptions="actionUnspecified"
                            android:maxLines="1"></EditText>

                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/swap_location"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp"
                    android:src="@drawable/swap" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/car"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/top_line"
                android:layout_margin="0dp"
                android:paddingRight="20dp"
                android:layout_below="@+id/text_view"
                android:orientation="horizontal"
                android:weightSum="1.0">

                <ImageView
                    android:layout_width="0dip"
                    android:layout_weight="0.3"
                    android:layout_height="50dp"
                    android:src="@drawable/saloon"/>
                <TextView
                    android:layout_width="0dip"
                    android:layout_weight="0.3"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:text="Your car"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="0.07"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/passengers"/>
                <TextView
                    android:id="@+id/people"
                    android:layout_width="0dp"
                    android:layout_weight="0.07"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:text="4"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="0.07"
                    android:layout_marginLeft="20dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/bags"/>
                <TextView
                    android:id="@+id/luggage"
                    android:layout_width="0dp"
                    android:layout_weight="0.07"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:text="2"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/re"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:padding="0dp"
                android:layout_margin="0dp"
                android:layout_below="@+id/car"
                android:orientation="horizontal"
                android:weightSum="1.0">

                <LinearLayout
                    android:id="@+id/total"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:orientation="vertical"
                    android:background="#00CCCC"
                    android:layout_weight="0.5">

                    <TextView
                        android:id="@+id/tv_total_2"
                        android:paddingTop="7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="11sp"
                        android:text="Total"/>
                    <TextView
                        android:id="@+id/tv_total_1"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="£0"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/book"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="0.5"
                    android:onClick="booking"
                    android:clickable="false"
                    android:orientation="vertical"
                    android:background="#000000">

                    <TextView
                        android:paddingTop="7dp"
                        android:id="@+id/tv_book_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#00CCCC"
                        android:layout_gravity="center"
                        android:textSize="11sp"
                        android:text="Continue"/>
                    <TextView
                        android:id="@+id/tv_book_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#00CCCC"
                        android:layout_gravity="center"
                        android:textSize="16sp"
                        android:text="Booking"/>

                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>

    <include
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/activity_main_drawer" />

</android.support.v4.widget.DrawerLayout>
