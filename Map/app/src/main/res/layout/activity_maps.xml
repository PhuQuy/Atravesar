<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"

    tools:openDrawer="start">

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:map="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.example.npquy.activity.MapsActivity" />

        <RelativeLayout
            android:id="@+id/content_data"
            android:layout_width="wrap_content"
            android:layout_gravity="bottom"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/common_google_signin_btn_text_dark_default"
            android:descendantFocusability="beforeDescendants"

            android:focusableInTouchMode="true"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/text_view"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:descendantFocusability="beforeDescendants"
                    android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/pick_up_layout"
                        android:background="@drawable/bottom_line"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <EditText
                            android:id="@+id/pick_up"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:clickable="true"
                            android:hint="Pick Up"
                            android:background="@android:drawable/screen_background_light_transparent"
                            android:imeActionId="@+id/pick_up_maps"
                            android:imeActionLabel="Pick Up"
                            android:textSize="12dp"
                            android:paddingLeft="5dp"
                            android:textAlignment="center"
                            android:imeOptions="actionUnspecified"
                            android:maxLines="1"
                            android:singleLine="true" />


                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/drop_off_layout"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_below="@+id/pick_up_layout">

                        <EditText
                            android:id="@+id/drop_off"
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:clickable="true"
                            android:hint="Drop off"
                            android:textSize="12dp"
                            android:background="@android:drawable/screen_background_light_transparent"
                            android:imeActionId="@+id/drop_off"
                            android:imeActionLabel="Drop off"
                            android:textAlignment="center"
                            android:paddingLeft="5dp"
                            android:imeOptions="actionUnspecified"
                            android:maxLines="1"></EditText>

                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/swap_location"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp"
                    android:src="@drawable/swap" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/car"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/top_line"
                android:layout_margin="0dp"
                android:paddingRight="20dp"
                android:layout_below="@+id/text_view"
                android:orientation="horizontal"
                android:weightSum="1.0">

                <ImageView
                    android:layout_width="0dip"
                    android:layout_weight="0.3"
                    android:layout_height="50dp"
                    android:src="@drawable/car"/>
                <TextView
                    android:layout_width="0dip"
                    android:layout_weight="0.3"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:text="Your car"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="0.07"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_current_booking"/>
                <TextView
                    android:id="@+id/people"
                    android:layout_width="0dp"
                    android:layout_weight="0.07"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:text="4"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="0.07"
                    android:layout_marginLeft="20dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/luggage8"/>
                <TextView
                    android:id="@+id/luggage"
                    android:layout_width="0dp"
                    android:layout_weight="0.07"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:text="2"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/re"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:padding="0dp"
                android:layout_margin="0dp"
                android:layout_below="@+id/car"
                android:orientation="horizontal"
                android:weightSum="1.0">

                <Button
                    android:id="@+id/total"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    style="@style/Widget.AppCompat.ImageButton"
                    android:background="#00CCCC"
                    android:text="Total"
                    android:textAlignment="center"></Button>

                <Button
                    android:id="@+id/book"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/total"
                    android:layout_weight="0.5"
                    android:onClick="booking"
                    style="@style/Widget.AppCompat.ImageButton"
                    android:text="Booking"
                    android:background="#000000"
                    android:textColor="#00CCCC"
                    android:clickable="false"
                    android:textAlignment="center"></Button>
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>

    <include
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/activity_main_drawer" />

</android.support.v4.widget.DrawerLayout>
